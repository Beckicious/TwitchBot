<UserControl x:Class="TwitchBot.ChatLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwitchBot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="450" Height="30" Background="#FFD4D421">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="txtUser" FontSize="12" Padding="9 0 9 0"  VerticalContentAlignment="Center" BorderThickness="0" Content="asdf" IsEnabled="False" Grid.Column="0"/>
        <Label x:Name="txtMessage" FontSize="12" Padding="9 0 9 0"  VerticalContentAlignment="Center" BorderThickness="0" Content="asdf" IsEnabled="False" Grid.Column="1"/>
    </Grid>
</UserControl>
