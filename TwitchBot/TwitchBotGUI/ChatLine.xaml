<UserControl x:Name="ctrChatLine" x:Class="TwitchBot.ChatLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwitchBot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" BorderThickness="1" SizeChanged="ctrChatLine_SizeChanged" Margin="0,0,0,5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtUser" Margin="0" TextWrapping="Wrap" Text="TextBox" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFD5D5D5" SelectionBrush="{x:Null}" BorderThickness="0" IsReadOnly="True" IsUndoEnabled="False" AllowDrop="False"/>
        <TextBox x:Name="txtMessage" Grid.Column="1" Margin="0" TextWrapping="Wrap" Text="TextBox" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFD5D5D5" SelectionBrush="{x:Null}" BorderThickness="0" ClipToBounds="True" HorizontalAlignment="Right" IsReadOnly="True" AllowDrop="False"/>
    </Grid>
</UserControl>
